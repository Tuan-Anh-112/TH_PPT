        function KetquadathucButtonPushed(app, event)
            xa = str2num(app.NhapgiatrixEditField.Value);
            ya = str2num(app.NhapgiatriyEditField.Value);
            syms X;

            if length(xa) ~= length(ya)
                app.HienthiTextArea.Value = sprintf('Vui long nhap cac gia tri x va y co cung kich thuoc!!');
                return;
            end

            if strcmp(app.ChonphuongphapDropDown.Value, 'Newton')
                n = length(xa);
                d = ya;
                for i = 2 : n
                    for j = n : -1 : i
                        d(j) = (d(j) - d(j-1)) / (xa(j) - xa(j-i+1));
                    end
                end
                
                % Xây dựng đa thức nội suy Newton
                result = d(1);
                for k = 2 : n
                    result = result * (X - xa(k - 1)) + d(k);
                end
                result = simplify(result);
                app.HienthiTextArea.Value = sprintf('Đa thức nội suy Newton:\n%s', char(result)); disp(result);

            elseif strcmp(app.ChonphuongphapDropDown.Value, 'Lagrange')
                n = length(xa);
                sum = 0;
                for i = 1 : n
                    product = ya(i);
                    for j = 1 : n
                        if j ~= i
                            product = product * ((X - xa(j)) / (xa(i) - xa(j)));
                        end
                    end
                    sum = sum + simplify(product);
                end
                result = simplify(sum);
                app.HienthiTextArea.Value = sprintf('Đa thức nội suy Lagrange:\n%s', char(result)); disp(result);
            end                        
        end
